generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  student
  teacher
  admin
}

enum WorkType {
  lesson
  quiz
  homework
  test
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  visitorId String?   @unique
  email     String?   @unique
  passwordHash String?
  role      UserRole  @default(student)
  createdAt DateTime  @default(now())
  attempts  Attempt[]
  variants  Variant[] @relation("VariantOwner")
  works     Work[]    @relation("WorkOwner")
  sessions  AuthSession[]
}

model Attempt {
  id         String   @id @default(uuid()) @db.Uuid
  userId      String   @db.Uuid
  topicId     String
  skillId     String
  taskId      String
  isCorrect   Boolean
  userAnswer  String
  durationMs  Int
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, skillId, createdAt])
  @@index([topicId, createdAt])
  @@index([topicId, userId, createdAt])
}

model Variant {
  id          String        @id @default(uuid()) @db.Uuid
  ownerUserId String        @db.Uuid
  topicId      String
  templateId   String
  title        String
  seed         String
  createdAt    DateTime     @default(now())
  owner        User         @relation("VariantOwner", fields: [ownerUserId], references: [id], onDelete: Cascade)
  tasks        VariantTask[]
  workLinks    WorkVariant[]

  @@index([ownerUserId, createdAt])
  @@index([topicId, createdAt])
}

model Work {
  id             String       @id @default(uuid()) @db.Uuid
  ownerUserId    String       @db.Uuid
  topicId        String
  title          String
  workType       WorkType
  printProfileJson Json
  isDemo         Boolean      @default(false)
  expiresAt      DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  owner          User         @relation("WorkOwner", fields: [ownerUserId], references: [id], onDelete: Cascade)
  variants       WorkVariant[]

  @@index([ownerUserId, createdAt])
  @@index([topicId, createdAt])
  @@index([isDemo, expiresAt])
}

model WorkVariant {
  id         String   @id @default(uuid()) @db.Uuid
  workId      String   @db.Uuid
  variantId   String   @db.Uuid
  orderIndex  Int
  createdAt   DateTime @default(now())

  work        Work     @relation(fields: [workId], references: [id], onDelete: Cascade)
  variant     Variant  @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([workId, orderIndex])
  @@unique([workId, variantId])
  @@index([variantId])
}

model VariantTask {
  id          String   @id @default(uuid()) @db.Uuid
  variantId   String   @db.Uuid
  taskId      String
  sectionLabel String
  orderIndex   Int
  variant      Variant  @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([variantId, orderIndex])
  @@index([variantId, sectionLabel])
}

model AuthSession {
  id         String   @id @default(uuid()) @db.Uuid
  userId     String   @db.Uuid
  tokenHash  String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, expiresAt])
}
